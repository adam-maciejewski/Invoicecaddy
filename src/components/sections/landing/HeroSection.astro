---
// Import the necessary dependencies
import { Image } from "astro:assets";
import heroImage from "@images/hero4.jpg";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";

// Define props from Astro
const { title, subTitle } = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
}
---

<!-- Defining a grid container that holds all the content -->
<section
  class="relative mx-auto max-w-7xl px-4 pt-10 sm:px-6 lg:px-8 lg:py-20"
>
  <div class="grid items-center gap-12 md:grid-cols-2">
    <!-- Title and description -->
    <div class="text-center md:text-left">
      <div class="mb-4 inline-block">
        <p class="font-semibold text-neutral-800">
          <span class="font-bold">A NEW PAYMENT</span> has been registered
        </p>
        <p class="text-right text-2xl font-bold text-green-600">+$3,500</p>
      </div>
      <h1
        class="block text-balance text-5xl font-bold tracking-tight text-neutral-800 sm:text-6xl lg:text-7xl"
      >
        <Fragment set:html={title} />
      </h1>
      {
        subTitle && (
          <p class="mt-4 text-pretty text-xl text-neutral-700">{subTitle}</p>
        )
      }
      <div class="mt-8">
        <PrimaryCTA
          text="Get Started"
          url="/#pricing"
          variant="primary"
          size="large"
        />
      </div>
    </div>
    <!-- Image section -->
    <div class="flex items-center justify-center">
      <Image
        src={heroImage}
        alt="Invoice Caddy Hero Image"
        class="h-auto w-full max-w-xl rounded-lg"
        loading="eager"
      />
    </div>
  </div>
</section>
