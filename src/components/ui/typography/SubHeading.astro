---
interface Props {
  as?: 'h2' | 'h3' | 'h4';
  class?: string;
  variant?: 'default' | 'card' | 'modal';
}

const { 
  as: Tag = 'h3',
  class: className = '',
  variant = 'default'
} = Astro.props;

// Warianty stylów dla różnych kontekstów
const styles = {
  default: "text-2xl font-bold text-neutral-800 dark:text-neutral-200",
  card: "text-lg font-bold text-neutral-800 dark:text-neutral-200",
  modal: "text-xl font-bold text-neutral-800 dark:text-neutral-200"
};

const baseStyles = styles[variant];
---

<Tag class:list={[baseStyles, className]}>
  <slot />
</Tag> 