---
// Destructure the properties from Astro.props
const { title, id } = Astro.props;
// Define TypeScript interface for the properties
interface Props {
  title?: string;
  id?: string;
}
// Define CSS classes for styling the button
const baseClasses =
  "group inline-flex flex-col items-end text-center rounded-md px-5 py-[15px] text-base font-normal leading-6 text-white ring-zinc-500 transition duration-300 focus-visible:ring-3 outline-hidden";
const borderClasses = "border border-transparent";
const bgColorClasses =
  "bg-brand-green hover:bg-brand-green-dark active:bg-brand-green-dark";
const disableClasses = "disabled:pointer-events-none disabled:opacity-50";
---

<!-- Button with dynamic title, id -->
<button
  class={`${baseClasses} ${borderClasses} ${bgColorClasses} ${disableClasses}`}
  id={id}
>
  {title}
</button>
