---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import FeatureGrid from "@components/sections/FeatureGrid.astro";
import HowItWorks from "@components/sections/HowItWorks.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import pricing from "@data/pricing.json";
import OnboardingSection from "@components/sections/OnboardingSection.astro";
---

<MainLayout>
  <HeroSection
    title="Tee Up Your Payments"
    subTitle="Generate beautiful invoices, estimates, and record payments flawlessly"
  />
  <FeatureGrid
    title="The invoicing platform your business needs"
    columns={1}
    features={[
      { icon: "checkCircle", description: "Seamlessly integrates with" },
      { icon: "checkCircle", description: "Saves precious time using invoices and payment automation" },
      { icon: "checkCircle", description: "You can use your current payment processor or our team will help you get one!" },
      { icon: "checkCircle", description: "Designed as a scalable solution, you pay for what you need" },
      { icon: "checkCircle", description: "Built-in trust-building merchant branding" },
    ]}
  />
  <FeatureGrid
    title="Save time through automation"
    columns={3}
    features={[
      {
        icon: "invoice",
        description: "<strong>Create invoice:</strong> Create & send branded invoices, and manage automated, recurring invoices.",
      },
      {
        icon: "collect",
        description: "<strong>Collect payments:</strong> Get paid with personalized landing pages, send payment links, and set up automated payment reminders.",
      },
      {
        icon: "funds",
        description: "<strong>Manage your corporate funds:</strong> Integrate with QuickBooks effortlessly and review your “customer invoice balances” using personalized dashboard.",
      },
    ]}
  />
  <FeatureGrid
    title="Key Features of Invoice Caddy"
    subTitle="Discover the powerful features that make Invoice Caddy the ideal invoicing solution for your business needs"
    columns={2}
    features={[
        { icon: "auto", description: "<strong>Automated Invoicing and Reminders:</strong> Create and send professional invoices automatically and set up customized payment reminders to reduce late payments." },
        { icon: "pricing", description: "<strong>Dual Pricing Strategy:</strong> Set different prices for card and cash payments and comply with dual pricing regulations effortlessly." },
        { icon: "gateways", description: "<strong>Multiple Payment Gateways:</strong> Offer various payment options to your customers and integrate with popular payment processors for seamless transactions." },
        { icon: "portal", description: "<strong>Customer Portal:</strong> Provide clients with access to their own secure portal and allow customers to view, manage, and pay invoices online." },
        { icon: "terminal", description: "<strong>Powerful Virtual Terminal:</strong> Process card-not-present transactions with ease and accept payments over the phone or in-store without extra hardware." },
        { icon: "offline", description: "<strong>Flexible Offline Payment Solutions:</strong> Manage cash, checks, and alternative payment methods and customize payment methods to fit your business needs." }
    ]}
  />
  <HowItWorks />
  <PricingSection pricing={pricing} />
  <OnboardingSection />
  <!-- Sekcje strony głównej będą dodawane tutaj -->
</MainLayout>
